{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "incremental": true,
    "sourceMap": true,
    "baseUrl": "./",
    "typeRoots": ["node_modules/*"]
  },
  "include": ["src/**/*.ts"]
}
